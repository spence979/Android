<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:background="@drawable/background"
  android:layout_height="match_parent" android:weightSum="1">
  		<TextView android:text="UserName:" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" 
  			android:id="@+id/lblUserName" android:layout_height="wrap_content" android:layout_marginTop="200px" android:layout_marginLeft="400px" />
  		<TextView android:text="Password:" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" 
  			android:layout_below="@+id/txtUserName" android:id="@+id/lblPassword" android:layout_height="wrap_content" android:layout_alignLeft="@+id/lblUserName">
  		</TextView>
  		<EditText android:layout_width="550dp" android:id="@+id/txtPassword" android:layout_height="23dp"
  			android:inputType="textPassword" android:background="#ffffff" android:textColor="#000000" android:layout_below="@+id/lblPassword" 
  			android:layout_alignLeft="@+id/lblUserName">
  		</EditText>
  		<Button android:text="Login" android:id="@+id/btnLogin" android:layout_height="wrap_content" android:layout_width="170dp"
		  	android:layout_below="@+id/txtPassword" android:layout_alignLeft="@+id/lblUserName" android:layout_marginTop="5dp">
 		</Button>
 		<Button android:text="Cancel" android:id="@+id/btnCancel" android:layout_height="wrap_content" android:layout_width="170dp"
 			android:layout_alignRight="@+id/txtPassword" android:layout_below="@+id/txtPassword" android:layout_marginTop="5dp">
		</Button>
 		<EditText android:textColor="#000000" android:id="@+id/txtUserName" android:background="#ffffff" android:layout_height="23dp" android:layout_width="550dp" android:layout_below="@+id/lblUserName" android:layout_alignLeft="@+id/lblUserName" android:inputType="text">
 		<requestFocus></requestFocus>
 		</EditText>
</RelativeLayout>